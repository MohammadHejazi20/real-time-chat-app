{
  "name": "real-time-chat-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter=./apps/* dev",
    "build": "pnpm --filter=./apps/* build",
    "start": "pnpm --filter=./apps/* start",
    "lint": "pnpm --filter=./apps/* lint",
    "clean": "pnpm --filter=./apps/* clean",
    "web:dev": "pnpm --filter=./apps/web dev",
    "server:dev": "pnpm --filter=./apps/server dev",
    "web:build": "pnpm --filter=./apps/web build",
    "server:build": "pnpm --filter=./apps/server build",
    "shared:build": "pnpm --filter=@real-time-chat-app/shared build",
    "setup": "pnpm install && pnpm shared:build"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
